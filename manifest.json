{
    "manifest_version" : 3,
    "name" : "BOC Assistant",
    "version" : "1.0",
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage",
        "contextMenus"
    ],
    "description" : "The goole-plug assistant for BOC operation center!",
    "icons" : {
        "128" : "img/logo.png",
        "48" : "img/logo.png",
        "16" : "img/logo.png"
    },
    "action": {
        "default_icon": {
            "128" : "img/logo.png",
            "48" : "img/logo.png",
            "16" : "img/logo.png"
        },
        "default_popup": "popup.html"
    },
    "commands": {
        "rotate-image": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "Rotate Image"
        }
    },
    "background": {
        "service_worker": "js/background.js",
        "permissions":true
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.js"]
        }
    ]


}